<h1>Find me at:</h1>
<ul class="links">
  {% for link in collections.highlighted %}
    <li 
      class="card"
      style="
        {% if link.data.theme %}
          --card-background: {{ link.data.theme.primary }};
          --card-background-shadow: {{ link.data.theme.shadow }};
        {% endif %}
      "
    >
      <a href="{{ link.data.url }}">
        {{ link.data.label }}
      </a>
    </li>
  {% endfor %}
</ul>


{% for type in collections.linksByType %}
  <h2>{{ type.title }}</h2>
  <p>{{ type.description }}</p>

  <ul class="links">
    {% for link in type.links %}
      <li 
        class="card"
        style="
          {% if link.data.theme %}
            --card-background: {{ link.data.theme.primary }};
            --card-background-shadow: {{ link.data.theme.shadow }};
          {% endif %}
        "
      >
        <a href="{{ link.data.url }}">
          {{ link.data.label }}
        </a>
      </li>
    {% endfor %}
  </ul>
{% endfor %}
